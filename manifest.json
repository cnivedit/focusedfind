{
    "manifest_version": 3,
    "name": "FocusedFind",
    "version": "1.0",
    "description": "Contextualize search results based on your open tabs.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ]
}